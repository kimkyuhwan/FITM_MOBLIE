<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="crossfit_juan.chk.com.crossfitjuan">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/juan_icon"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@drawable/juan_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:launchMode="singleInstance"
        android:taskAffinity=""
        >
        <activity android:name=".Activity.LoginActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleInstance"
            android:taskAffinity=""
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 네이버를 이용한 로그인에 사용되는 액티비티 -->
        <activity
            android:name="com.nhn.android.naverlogin.ui.OAuthLoginActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name="com.nhn.android.naverlogin.ui.OAuthLoginInAppBrowserActivity"
            android:label="OAuth2.0 In-app" />
        <activity android:name=".Activity.MainActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleInstance"
            android:taskAffinity=""
            />
        <activity android:name=".Activity.RegisterActivity"
            android:windowSoftInputMode="adjustUnspecified"
            android:screenOrientation="portrait"
            android:launchMode="singleInstance"
            android:taskAffinity=""
            />
        <activity android:name=".Activity.NoticeActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleInstance"
            android:taskAffinity=""
            />
        <activity android:name=".Activity.ReservationActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleInstance"
            android:taskAffinity=""
            />
        <activity android:name=".Activity.AboutJuanActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleInstance"
            android:taskAffinity=""
            />
        <activity android:name=".Activity.QnaActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleInstance"
            android:taskAffinity=""
            />

        <activity android:name=".Activity.UserInfoActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleInstance"
            android:taskAffinity=""
            />
        <activity android:name=".Activity.MarketActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleInstance"
            android:taskAffinity=""
            />
        <activity android:name=".Activity.MarketItemActivity"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="portrait"
            android:launchMode="singleInstance"
            android:taskAffinity=""
            >
        </activity>
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyA6EPEPS04ZbmlaJiarggWL-B_CHe-BmFs"/>
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/juan_push_icon"
            />

        <service
            android:name=".Firebase.MyFirebaseInstanceIdService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>
        <service
            android:name=".Firebase.MyFirebaseMessagingService">
                <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>
    </application>

</manifest>