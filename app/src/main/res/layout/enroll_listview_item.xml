<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">

    <TextView
        android:textSize="20dp"
        android:textAlignment="center"
        android:id="@+id/txtv_enroll_list_item_class_num"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent" />

    <TextView
        android:textSize="20dp"
        android:textAlignment="center"
        android:id="@+id/txtv_enroll_list_item_time"
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="match_parent" />

    <TextView
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_weight="1"
        android:id="@+id/txtv_enroll_list_item_max_participant"
        android:layout_width="0dp"
        android:layout_height="match_parent" />

    <TextView
        android:textSize="20dp"
        android:layout_weight="1"
        android:textAlignment="center"
        android:id="@+id/txtv_enroll_list_item_cur_participant"
        android:layout_width="0dp"
        android:layout_height="match_parent" />

    <Button
        android:text="신청하기"
        android:layout_weight="2"
        android:id="@+id/btn_enroll_list_item_state_btn"
        android:layout_width="0dp"
        android:layout_height="match_parent" />

</LinearLayout>