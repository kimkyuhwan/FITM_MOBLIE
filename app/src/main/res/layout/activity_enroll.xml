<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:textSize="30dp"
            android:id="@+id/txtv_enroll_yyyy"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:textSize="30dp"
            android:text="년 "
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:textSize="30dp"
            android:id="@+id/txtv_enroll_mm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:textSize="30dp"
            android:text="월 "
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:textSize="30dp"
            android:id="@+id/txtv_enroll_dd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:textSize="30dp"
            android:text="일 Today W.O.D"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>

    <TextView
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:text="Load error."
        android:textSize="30dp"
        android:id="@+id/txtv_enroll_today_wod"
        android:layout_weight="6"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <LinearLayout
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:gravity="center"
            android:textSize="20dp"
            android:textAlignment="center"
            android:text="번호"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <TextView
            android:gravity="center"
            android:textSize="20dp"
            android:text="시작 ~ 종료시간"
            android:textAlignment="center"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <TextView
            android:gravity="center"
            android:textSize="20dp"
            android:text="최대"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <TextView
            android:gravity="center"
            android:textSize="20dp"
            android:text="현재"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <Button
            android:text="새로고침"
            android:layout_weight="2"
            android:id="@+id/btn_enroll_list_item_state_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

    </LinearLayout>

    <ListView
        android:id="@+id/listview_enroll_classes"
        android:layout_weight="12"
        android:layout_width="match_parent"
        android:layout_height="0dp"></ListView>


</LinearLayout>