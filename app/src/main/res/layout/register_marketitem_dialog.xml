<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="300dp"
    android:layout_gravity="center"
    android:layout_height="wrap_content"
    android:windowSoftInputMode="adjustResize"
    >
    <TextView
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="구매 신청"
        android:id="@+id/market_dialog_tap"
        />
    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="코멘트를 입력해주세요"
        />
    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/market_dialog_comment"
            android:maxLines="1"
            android:lines="1"
            android:singleLine="true"
            android:maxLength="50"
            />
        <ImageButton
            android:layout_marginRight="5dp"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_toRightOf="@id/market_dialog_comment"
            android:layout_centerVertical="true"
            android:id="@+id/market_dialog_comment_clear_Btn"
            android:background="@drawable/cancel_btn"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:background="#aaaaaa"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:textSize="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="취소"
            android:id="@+id/market_dialog_comment_cancel_Btn"
            />
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="신청하기"
            android:textSize="18dp"
            android:background="#4488ff"
            android:textColor="#ffffff"
            android:id="@+id/market_dialog_comment_register_Btn"
            />


    </LinearLayout>


</LinearLayout>