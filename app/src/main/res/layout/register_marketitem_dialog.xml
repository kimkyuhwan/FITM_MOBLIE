<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="300dp"
    android:layout_gravity="center"
    android:padding="20dp"
    android:layout_height="wrap_content">
    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="구매 신청"
        />
    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="코멘트를 입력해주세요"
        />
    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/market_dialog_comment"
            />
        <ImageButton
            android:layout_marginRight="5dp"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:visibility="invisible"
            android:layout_alignRight="@id/market_dialog_comment"
            android:layout_centerInParent="true"
            android:id="@+id/market_dialog_comment_clear_Btn"
            android:background="@drawable/cancel_btn"
            />
    </RelativeLayout>
    <Button
        android:layout_margin="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="신청하기"
        android:textSize="18dp"
        android:background="#000000"
        android:textColor="#ffffff"
        android:id="@+id/market_dialog_comment_register_Btn"
        />
    <Button
        android:layout_margin="3dp"
        android:background="#000000"
        android:textColor="#ffffff"

        android:textSize="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="취소"
        android:id="@+id/market_dialog_comment_cancel_Btn"
        />

</LinearLayout>