<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="crossfit_juan.chk.com.crossfitjuan.Activity.MarketActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="0dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolBarArea"
            android:background="@color/colorPrimaryDark"
            app:popupTheme="@style/AppTheme.PopupOverlay" >

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="Small Market"
                    android:textSize="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>
    <android.support.design.widget.TabLayout
        android:id="@+id/tablayout_empty"
        android:layout_width="match_parent"
        android:layout_height="@dimen/TabLayoutArea"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="0dp"
        app:tabIndicatorColor="@color/tabTextColorSelected"
        app:tabSelectedTextColor="@color/tabTextColorSelected"
        app:tabTextColor="@color/tabTextColor">

        <android.support.design.widget.TabItem
            android:id="@+id/market_fragment1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment1" />

        <android.support.design.widget.TabItem
            android:id="@+id/market_fragment2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment2" />

    </android.support.design.widget.TabLayout>

    <FrameLayout
        android:id="@+id/viewpager_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>
