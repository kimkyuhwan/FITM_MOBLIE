<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/your_chat_layout"
    android:layout_marginTop="2dp"
    >

    <TextView
        android:layout_weight="100"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chat_your_msg_content"
        android:text="Hello world!Hello world!Hello world!Hello world!Hello world!Hello world! Hello world!"
        android:textSize="15dp"
        android:background="#ebf1f4"
        android:layout_marginLeft="5dp"
        android:textColor="#000000"
        android:padding="5dp"
        />

    <TextView
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:id="@+id/chat_your_msg_time"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="오후 11:00"
        android:gravity="left"
        android:textColor="#334477"
        android:layout_marginRight="5dp"
        android:textSize="14dp"
        />





</LinearLayout>