<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:id="@+id/your_chat_layout"
    >

    <TextView
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chat_your_msg_content"
        android:text="Hello world!"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:textColor="#77aa77"
        android:padding="5dp"
        android:layout_marginRight="5dp"

        />

    <TextView
        android:id="@+id/chat_your_msg_time"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="11:00"
        android:gravity="center"
        android:textColor="#334477"
        android:textSize="14dp" />





</LinearLayout>