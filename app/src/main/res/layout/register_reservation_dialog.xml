<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_gravity="center"
    android:layout_height="wrap_content"
    android:background="#f3f9f9"
    >

    <TextView
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_time"
        android:textColor="#000000"
        android:textSize="20dp"
        android:text="12:00:00 ~ 13:00:00"
        />
    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:text="코멘트를 입력해주세요 (50자 이내)"
        />
    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/dialog_comment"
            android:maxLines="1"
            android:lines="1"
            android:singleLine="true"
            android:maxLength="50"
            />
        <ImageButton
            android:layout_marginRight="5dp"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:visibility="invisible"
            android:layout_toRightOf="@id/dialog_comment"
            android:layout_centerVertical="true"
            android:id="@+id/dialog_comment_clear_Btn"
            android:background="@drawable/cancel_btn"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >
        <Button
            android:layout_weight="1"
            android:background="#aaaaaa"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="취소"
            android:textSize="14dp"
            android:id="@+id/dialog_comment_cancel_Btn"
            />
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="예약"

            android:textSize="14dp"
            android:background="#4488ff"
            android:textColor="#ffffff"
            android:id="@+id/dialog_comment_register_Btn"
            />



    </LinearLayout>


</LinearLayout>