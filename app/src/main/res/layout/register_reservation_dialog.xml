<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="300dp"
    android:layout_gravity="center"
    android:padding="20dp"
    android:layout_height="wrap_content">
    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_time"
        android:textSize="25dp"
        android:text="12:00:00 ~ 13:00:00"
        />
    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/dialog_comment"
            />
        <ImageButton
            android:layout_marginRight="5dp"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:visibility="invisible"
            android:layout_alignRight="@id/dialog_comment"
            android:layout_centerInParent="true"
            android:id="@+id/dialog_comment_clear_Btn"
            android:background="@drawable/cancel_btn"
            />
    </RelativeLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="등록"
        android:id="@+id/dialog_comment_register_Btn"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="취소"
        android:id="@+id/dialog_comment_cancel_Btn"
        />

</LinearLayout>