<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_gravity="center"
    android:layout_height="wrap_content">

        />

    <TextView
        android:id="@+id/rest_dialog_title"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="휴회 기간과 이유를 적으신 후 신청해주세요"
        android:textSize="12dp" />
    <RelativeLayout
        android:padding="15dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/rest_dialog_comment"
            android:maxLines="4"
            />
        <ImageButton
            android:layout_toRightOf="@+id/rest_dialog_comment"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:visibility="invisible"
            android:layout_alignRight="@id/rest_dialog_comment"
            android:layout_centerInParent="true"
            android:id="@+id/rest_dialog_comment_clear_Btn"
            android:background="@drawable/cancel_btn"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:layout_weight="1"
            android:background="#aaaaaa"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="취소"
            android:textSize="14dp"
            android:id="@+id/rest_dialog_comment_cancel_Btn"
            />
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="신청"

            android:textSize="14dp"
            android:background="#4488ff"
            android:textColor="#ffffff"
            android:id="@+id/rest_dialog_comment_register_Btn"
            />



    </LinearLayout>


</LinearLayout>