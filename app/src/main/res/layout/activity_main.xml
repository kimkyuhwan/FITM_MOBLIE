<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="end"
    android:background="#000000"
    tools:context="crossfit_juan.chk.com.crossfitjuan.Activity.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:background="#b40202"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp" />


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linear1"
            android:orientation="vertical"
            >
            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/menu_btn"
                android:background="@drawable/menu_btn"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_gravity="right"
                />
            <ImageView
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35dp"
                android:layout_gravity="center"
                android:layout_width="320dp"
                android:layout_height="180dp"
                android:background="@drawable/juanlogo"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:id="@+id/imageView" />
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C R O S S F I T"
                android:textColor="#ffffff"
                android:textSize="30dp"
                android:layout_marginTop="10dp"/>


            </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@id/linear1"
            >

            <LinearLayout
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:orientation="horizontal"
                android:background="@drawable/back_1"
                android:layout_below="@+id/linear1"
                android:id="@+id/linear_record"
                android:layout_weight="1"
                >
                <com.ssomai.android.scalablelayout.ScalableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:scale_base_height="200"
                    app:scale_base_width="530"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:scale_left="20"
                        app:scale_width="200"
                        app:scale_height="200"
                        android:background="@drawable/img1"
                        />
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        app:scale_left="320"
                        app:scale_top="50"
                        app:scale_width="120"
                        app:scale_textsize="30"
                        android:textColor="#a6a6a6"
                        android:text="튜토리얼"

                        />
                    <ImageButton
                        app:scale_top="50"
                        app:scale_left="450"
                        app:scale_width="40"
                        app:scale_height="40"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn"
                        android:id="@+id/btn_ranking"
                        />
                </com.ssomai.android.scalablelayout.ScalableLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:orientation="horizontal"
                android:background="@drawable/back_2"
                android:layout_below="@+id/linear_record"
                android:id="@+id/linear_reservation"
                android:layout_weight="1"
                >
                <com.ssomai.android.scalablelayout.ScalableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:scale_base_width="530"
                    app:scale_base_height="200"
                    app:scale_top="200"
                    >
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:scale_top="50"
                    app:scale_left="20"
                    app:scale_width="40"
                    app:scale_height="40"
                    android:background="@drawable/btn"
                    android:id="@+id/btn_reserve"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#a6a6a6"
                    android:text="예약하기"
                    app:scale_left="90"
                    app:scale_top="50"
                    app:scale_width="120"
                    app:scale_textsize="30"
                    />

                <ImageView
                    app:scale_left="330"
                    app:scale_width="200"
                    app:scale_height="200"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/img2"
                    />

                </com.ssomai.android.scalablelayout.ScalableLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:orientation="horizontal"
                android:id="@+id/linear_notice"
                android:background="@drawable/back_3"
                android:layout_below="@+id/linear_reservation"
                android:layout_weight="1"
                >
                <com.ssomai.android.scalablelayout.ScalableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:scale_base_height="200"
                    app:scale_base_width="530"
                    >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:scale_left="20"
                    app:scale_width="200"
                    app:scale_height="200"
                    android:background="@drawable/img3"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:scale_left="320"
                    app:scale_top="50"
                    app:scale_width="120"
                    app:scale_textsize="30"
                    android:textColor="#a6a6a6"

                    android:text="공동구매"
                    />
                <ImageButton
                    android:id="@+id/btn_notice"
                    app:scale_top="50"
                    app:scale_left="450"
                    app:scale_width="40"
                    app:scale_height="40"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn"
                    />
                </com.ssomai.android.scalablelayout.ScalableLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_test"
        app:menu="@menu/drawer"
        app:itemTextColor="#ffffff"
        android:background="#aaa2a2a2"
        />
</android.support.v4.widget.DrawerLayout>

