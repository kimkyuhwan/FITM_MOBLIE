<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="end"
    android:background="#000000"
    tools:context="crossfit_juan.chk.com.crossfitjuan.Activity.MainActivity">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <com.ssomai.android.scalablelayout.ScalableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:scale_base_width="540"
                app:scale_base_height="510"
                android:background="@drawable/juan_background"
                android:id="@+id/main_background"

                >
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/menu_btn"
                    android:background="@drawable/menu_btn"
                    app:scale_width="36"
                    app:scale_height="36"
                    app:scale_top="10"
                    app:scale_left="480"
                    />

            </com.ssomai.android.scalablelayout.ScalableLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="100"
                >
                <com.ssomai.android.scalablelayout.ScalableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:scale_base_height="110"
                    app:scale_base_width="540"
                    android:id="@+id/main_scalable1"
                    android:layout_gravity="bottom"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:scale_left="30"
                        app:scale_width="130"
                        app:scale_height="110"
                        android:background="@drawable/img1"
                        />
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        app:scale_left="350"
                        app:scale_top="32"
                        app:scale_height="40"
                        app:scale_width="120"
                        app:scale_textsize="30"
                        android:textColor="#a6a6a6"
                        android:text="공지사항"

                        />
                    <ImageButton
                        app:scale_top="35"
                        app:scale_left="480"
                        app:scale_width="40"
                        app:scale_height="40"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn"
                        android:id="@+id/btn_tutorial"
                        />
                </com.ssomai.android.scalablelayout.ScalableLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="100"
                >
                <com.ssomai.android.scalablelayout.ScalableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:scale_base_width="540"
                    app:scale_base_height="110"
                    android:id="@+id/main_scalable2"
                    android:layout_gravity="bottom"
                    >
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:scale_top="35"
                    app:scale_left="20"
                    app:scale_width="40"
                    app:scale_height="40"
                    android:background="@drawable/btn"
                    android:id="@+id/btn_reserve"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#a6a6a6"
                    android:text="수업예약"
                    app:scale_left="90"
                    app:scale_top="32"
                    app:scale_width="120"
                    app:scale_textsize="30"
                    />

                <ImageView
                    app:scale_left="380"
                    app:scale_width="150"
                    app:scale_height="110"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/img2"
                    />

                </com.ssomai.android.scalablelayout.ScalableLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="100"
                >
                <com.ssomai.android.scalablelayout.ScalableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:scale_base_height="110"
                    app:scale_base_width="540"
                    android:id="@+id/main_scalable3"
                    android:layout_gravity="bottom"
                    >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:scale_left="20"
                    app:scale_width="140"
                    app:scale_height="110"
                    android:background="@drawable/img3"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:scale_left="350"
                    app:scale_top="32"
                    app:scale_width="120"
                    app:scale_textsize="30"
                    android:textColor="#a6a6a6"

                    android:text="순위보기"
                    />
                <ImageButton
                    android:id="@+id/btn_market"
                    app:scale_top="35"
                    app:scale_left="480"
                    app:scale_width="40"
                    app:scale_height="40"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn"
                    />
                </com.ssomai.android.scalablelayout.ScalableLayout>
            </LinearLayout>
        </LinearLayout>



    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:fitsSystemWindows="true"
        app:theme="@style/ThemeOverlay.AppCompat.navTheme"
        app:headerLayout="@layout/nav_header_test"
        app:menu="@menu/drawer"
        app:itemIconTint="#ffffff"
        app:itemTextColor="#ffffff"
        android:background="#aa000000"
        />
</androidx.drawerlayout.widget.DrawerLayout>

