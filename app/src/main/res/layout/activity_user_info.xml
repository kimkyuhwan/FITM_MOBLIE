<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="crossfit_juan.chk.com.crossfitjuan.Activity.UserInfoActivity"
    android:orientation="vertical"
    >

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:scale_base_height="750"
        app:scale_base_width="540"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내 정보"
            app:scale_textsize="26"
            android:textColor="#ffffff"
            app:scale_width="540"
            app:scale_height="60"
            android:gravity="center"
            android:background="#000000"
            />



        <crossfit_juan.chk.com.crossfitjuan.tool.CircleImageView
            android:id="@+id/user_info_profile_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_ko"
            app:scale_width="160"
            app:scale_height="160"
            app:scale_left="190"
            app:scale_top="90"
            app:civ_border_width="2dp"
            app:civ_border_color="#FFe2e2e2"
            />

        <crossfit_juan.chk.com.crossfitjuan.tool.CircleImageView
            android:id="@+id/user_info_photoAlbum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/photoalbum"
            app:civ_border_color="#FFe2e2e2"
            app:civ_border_width="1dp"
            app:civ_fill_color="#ffffff"
            app:scale_height="50"
            app:scale_width="50"
            app:scale_left="302"
            app:scale_top="202"
    />
        <TextView
            android:id="@+id/user_info_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:scale_top="250"
            app:scale_textsize="28"
            android:text="김규환"
            android:textColor="#000000"
            app:scale_width="180"
            app:scale_height="60"
            app:scale_left="180"
            android:gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:scale_top="360"
            app:scale_textsize="26"
            android:text="이메일"
            android:textColor="#000000"
            app:scale_width="120"
            app:scale_height="40"
            app:scale_left="20"
            />
        <TextView
            android:id="@+id/user_info_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:scale_top="400"
            app:scale_textsize="22"
            android:hint="gamekgh@naver.com"
            android:textColor="#000000"
            app:scale_width="500"
            app:scale_height="30"
            app:scale_left="20"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:scale_top="460"
            app:scale_textsize="26"
            android:text="휴대폰 번호"
            android:textColor="#000000"
            app:scale_width="160"
            app:scale_height="40"
            app:scale_left="20"
            />
        <TextView
            android:id="@+id/user_info_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:scale_top="500"
            app:scale_textsize="22"
            android:hint="010-9287-0752"
            android:textColor="#000000"
            app:scale_width="500"
            app:scale_height="30"
            app:scale_left="20"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:scale_top="560"
            app:scale_textsize="26"
            android:text="락커 번호"
            android:textColor="#000000"
            app:scale_width="120"
            app:scale_height="40"
            app:scale_left="20"
            />
        <TextView
            android:id="@+id/user_info_locker_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:scale_top="600"
            app:scale_textsize="22"
            android:hint="락커 번호를 입력해 주세요"
            android:textColor="#000000"
            app:scale_width="500"
            app:scale_height="30"
            app:scale_left="20"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:scale_top="660"
            app:scale_textsize="26"
            android:text="등록기간"
            android:textColor="#000000"
            app:scale_width="120"
            app:scale_height="40"
            app:scale_left="20"
            />
        <TextView
            android:id="@+id/user_info_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:scale_top="700"
            app:scale_textsize="22"
            android:hint="2017/09/30~2017/10/31"
            android:textColor="#000000"
            app:scale_width="500"
            app:scale_height="30"
            app:scale_left="20"
            />
        <ImageButton
            android:id="@+id/user_info_restBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:scale_top="668"
            app:scale_textsize="22"
            android:background="@drawable/rest"
            android:textColor="#000000"
            app:scale_width="50"
            app:scale_height="50"
            app:scale_left="470"
            />

    </com.ssomai.android.scalablelayout.ScalableLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/user_info_sign_out"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="회원탈퇴"
            android:textSize="16dp"
            android:layout_centerInParent="true"
            android:textColor="#ffffff"
            android:background="#000000"
            />



    </RelativeLayout>
</LinearLayout>
