<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="crossfit_juan.chk.com.crossfitjuan.Activity.LoginActivity"
    android:background="#000000"
    android:orientation="vertical"
    >
    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:scale_base_width="540"
        app:scale_base_height="740"
        >
        <android.support.v4.view.ViewPager
            android:id="@+id/login_viewPager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:scale_width="540"
            app:scale_height="720">
        </android.support.v4.view.ViewPager>
        <ImageView
            android:id="@+id/login_imageCircle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:scale_top="720"
            app:scale_height="20"
            app:scale_width="120"
            app:scale_left="210"
            android:background="@drawable/circle01"
            />
    </com.ssomai.android.scalablelayout.ScalableLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.nhn.android.naverlogin.ui.view.OAuthLoginButton
            android:id="@+id/NaverLoginBtn"
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            >
        </com.nhn.android.naverlogin.ui.view.OAuthLoginButton>

    </RelativeLayout>



</LinearLayout>
